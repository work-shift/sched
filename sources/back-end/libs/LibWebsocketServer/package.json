{
  "name": "@work-shift/lib-websocket-server",
  "version": "0.0.0",
  "description": "[lib] Websocket Server",
  "type": "module",
  "engines": {
    "node": "=18.7.0",
    "pnpm": "=7.7.1"
  },
  "engineStrict": true,
  "volta": {
    "node": "18.7.0"
  },
  "main": "./LibWebsocketServer.mjs",
  "exports": {
    "./LibWebsocketServer.mjs": "./LibWebsocketServer.mjs"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "./node_modules/.bin/eslint ./ --ext .mjs",
    "test": "pnpm run lint && NODE_EXTRA_CA_CERTS=$(mkcert -CAROOT)/rootCA.pem NODE_ENV=test NODE_DEBUG=LibWebsocketServer* ./node_modules/.bin/c8 ./node_modules/.bin/mocha",
    "coveralls": "./node_modules/.bin/coveralls < ./coverage/lcov.info"
  },
  "author": "Dmitry N. Medvedev <dmitry.medvedev@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.10.0"
  },
  "devDependencies": {
    "c8": "^7.12.0",
    "chai": "^4.3.6",
    "coveralls": "^3.1.1",
    "dotenv": "^16.0.1",
    "eslint": "^8.20.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "execa": "^6.1.0",
    "mocha": "^10.0.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nanoid": "^4.0.0",
    "ws": "^8.8.1"
  },
  "mocha": {
    "allowUncaught": true,
    "failZero": true,
    "async-only": false,
    "bail": true,
    "checkLeaks": true,
    "forbidOnly": true,
    "exit": true,
    "forbidPending": true,
    "slow": 50,
    "timeout": 1000,
    "color": true,
    "diff": true,
    "fullTrace": true,
    "growl": false,
    "inline-diffs": true,
    "reporter": "spec",
    "noConfig": true,
    "noOpts": true,
    "exclude": [
      "**/node_modules/**/*"
    ],
    "spec": [
      "**/specs/*.mjs"
    ]
  }
}
